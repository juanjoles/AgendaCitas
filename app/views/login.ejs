<link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Agenda de Citas</title>
</head>

<body>
    
    
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">
                        <form class="bg-white  rounded-5 shadow-5-strong p-5" action="/auth" method="POST">
                            <h2 class="row justify-content-center">Inicio de Sesion</h2>
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="text"  class="form-control" name="username"  />
                                <label class="form-label" for="form1Example1">Email address</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" id="form1Example2" class="form-control" name="password" />
                                <label class="form-label" for="form1Example2">Password</label>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center">

                                </div>


                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block">Sign in</button>

                            <a href="/home" type="submit" class="btn btn-primary btn-block">Ingresar</a>
                            <a href="/register" type="submit" class="btn btn-primary btn-block">Registrar</a>
                        </form>
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

            <% if (typeof alert != "undefined")  { %>
             <script>
             Swal.fire({
               title:'<%= alertTitle %>',
               text:'<%= alertMessage %>',
               icon:'<%= alertIcon %>',
               
             }).then(()=>{
               window.location='/<%= ruta %>'
             })
             </script>
            <% } %>
</body>

</html>